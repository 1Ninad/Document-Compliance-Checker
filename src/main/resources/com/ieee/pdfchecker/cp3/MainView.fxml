<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.ieee.pdfchecker.cp3.MainController"
          alignment="center" hgap="10" vgap="10">

    <Label text="IEEE PDF Compliance Checker" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="Select PDF" onAction="#handleFileSelection" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label fx:id="resultLabel" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>
